<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.example.asteroides"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.example.asteroides.AsteroidesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.example.asteroides.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="org.example.asteroides.Localizacion"
            android:theme="@android:style/Theme.Dialog" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.example.asteroides.Localizacion" />
        </activity>
        <activity
            android:name="org.example.asteroides.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity android:name="Puntuaciones"></activity>
    </application>

</manifest>